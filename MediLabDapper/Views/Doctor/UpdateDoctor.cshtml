@model GetDoctorByIdDto
@{
    ViewData["Title"] = "UpdateDoctor";
   
}

<h3>Doktor Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="DoctorId" />
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" asp-for="NameSurname" class="form-control" />
    </div>
    <div class="form-group">
        <label>Resim Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bölüm</label>
        <select asp-for="DepartmentId" asp-items="@ViewBag.departments" class="form-control">
            <option disabled>Bölüm Seçiniz</option>
        </select>
    </div>

    <button class="btn btn-primary mt-4">Güncelle</button>
</form>